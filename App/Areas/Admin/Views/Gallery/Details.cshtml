@using App.Models
 @model MotionEvent
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Motion Event Details";
    var relatedEvents = ViewBag.RelatedEvents as List<MotionEvent>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Motion Event Details</h2>
            <p class="text-muted mb-0">
                Camera: @Model.CameraName | Location: @Model.Location
            </p>
        </div>
        <div class="btn-group">
            <a href="@Url.Action("Download", new { id = Model.Id })" class="btn btn-outline-primary">
                <i class="fas fa-download"></i> Download
            </a>
            <button class="btn btn-outline-danger" id="deleteEvent">
                <i class="fas fa-trash"></i> Delete
            </button>
            <a href="@Url.Action("Index")" class="btn btn-outline-dark">
                <i class="fas fa-arrow-left"></i> Back to Gallery
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body p-0">
                    <img src="@Model.ImagePath" class="img-fluid" alt="Motion Event">
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Event Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Time</dt>
                        <dd class="col-sm-8">@Model.Timestamp.ToLocalTime().ToString("g")</dd>

                        <dt class="col-sm-4">Camera</dt>
                        <dd class="col-sm-8">@Model.CameraName</dd>

                        <dt class="col-sm-4">Location</dt>
                        <dd class="col-sm-8">@Model.Location</dd>

                        <dt class="col-sm-4">Motion %</dt>
                        <dd class="col-sm-8">@(Math.Round(Model.MotionPercentage * 100))%</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.Acknowledged)
                            {
                                <span class="badge badge-success">Acknowledged</span>
                                <small class="d-block text-muted">
                                    by @Model.AcknowledgedBy on @Model.AcknowledgedAt?.ToLocalTime().ToString("g")
                                </small>
                            }
                            else
                            {
                                <span class="badge badge-warning">Pending</span>
                                <button class="btn btn-sm btn-primary ml-2" id="acknowledgeEvent">
                                    Acknowledge
                                </button>
                            }
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <dt class="col-sm-4">Notes</dt>
                            <dd class="col-sm-8">@Model.Notes</dd>
                        }
                    </dl>
                </div>
            </div>

            @if (relatedEvents.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Related Events</h5>
                        <small class="text-muted">Events within 5 minutes</small>
                    </div>
                    <div class="list-group list-group-flush">
                        @foreach (var evt in relatedEvents.OrderBy(e => e.Timestamp))
                        {
                            <a href="@Url.Action("Details", new { id = evt.Id })" 
                               class="list-group-item list-group-item-action">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@evt.CameraName</h6>
                                        <small>@evt.Timestamp.ToLocalTime().ToString("g")</small>
                                    </div>
                                    <span class="badge badge-primary">
                                        @(Math.Round(evt.MotionPercentage * 100))%
                                    </span>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#deleteEvent').click(function() {
                if (confirm('Are you sure you want to delete this event?')) {
                    $.post('@Url.Action("DeleteImage", new { id = Model.Id })')
                        .done(function(response) {
                            if (response.success) {
                                window.location.href = '@Url.Action("Index")';
                            } else {
                                alert('Failed to delete event');
                            }
                        });
                }
            });

            $('#acknowledgeEvent').click(function() {
                $.post('@Url.Action("AcknowledgeEvent", "Analytics", new { id = Model.Id })')
                    .done(function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Failed to acknowledge event');
                        }
                    });
            });
        });
    </script>
}