 @model App.Models.Camera.CameraDevice

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Add Camera";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Add New Camera</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Location" class="form-label">Location</label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IpAddress" class="form-label">IP Address</label>
                            <input asp-for="IpAddress" class="form-control" />
                            <span asp-validation-for="IpAddress" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="StreamUrl" class="form-label">Stream URL</label>
                            <input asp-for="StreamUrl" class="form-control" placeholder="rtsp://camera-ip:port/stream" />
                            <span asp-validation-for="StreamUrl" class="text-danger"></span>
                            <small class="form-text text-muted">Enter the RTSP stream URL for the camera</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Credentials" class="form-label">Credentials (optional)</label>
                            <input asp-for="Credentials" class="form-control" placeholder="username:password" />
                            <span asp-validation-for="Credentials" class="text-danger"></span>
                            <small class="form-text text-muted">Format: username:password (if required)</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Resolution" class="form-label">Resolution</label>
                            <input asp-for="Resolution" class="form-control" placeholder="e.g. 1920x1080" />
                            <span asp-validation-for="Resolution" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label">Active</label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-primary">Create Camera</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}