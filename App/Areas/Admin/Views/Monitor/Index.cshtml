 @model IEnumerable<App.Models.Monitor.MonitorDevice>

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Monitors";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Monitors</h2>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Monitor
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Location</th>
                            <th>IP Address</th>
                            <th>Status</th>
                            <th>Last Ping</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="monitors-list">
                        @foreach (var monitor in Model ?? Enumerable.Empty<App.Models.Monitor.MonitorDevice>())
                        {
                            <tr data-monitor-id="@monitor.Id">
                                <td>@monitor.Name</td>
                                <td>@monitor.Location</td>
                                <td>@monitor.IpAddress</td>
                                <td>
                                    <span class="badge bg-@(monitor.IsActive ? "success" : "danger")">
                                        @(monitor.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>@monitor.LastPing.ToString("g")</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("Edit", new { id = monitor.Id })" 
                                           class="btn btn-sm btn-outline-primary">
                                            Edit
                                        </a>
                                        <button type="button" 
                                                class="btn btn-sm btn-outline-danger"
                                                onclick="deleteMonitor(@monitor.Id)">
                                            Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteMonitor(id) {
            if (confirm('Are you sure you want to delete this monitor?')) {
                fetch(`/Admin/Monitor/Delete/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                })
                .then(response => {
                    if (response.ok) {
                        document.querySelector(`tr[data-monitor-id="${id}"]`).remove();
                    } else {
                        alert('Failed to delete monitor');
                    }
                });
            }
        }

        // Real-time status updates
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/monitorHub")
            .build();

        connection.on("UpdateMonitorStatus", (monitorId, isActive) => {
            const row = document.querySelector(`tr[data-monitor-id="${monitorId}"]`);
            if (row) {
                const statusBadge = row.querySelector(".badge");
                statusBadge.className = `badge bg-${isActive ? "success" : "danger"}`;
                statusBadge.textContent = isActive ? "Active" : "Inactive";
            }
        });

        connection.start();
    </script>
}