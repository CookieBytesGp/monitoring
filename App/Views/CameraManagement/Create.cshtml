@model DTOs.Camera.CreateCameraCommand
@{
    ViewData["Title"] = "Add New Camera";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="Index">مدیریت دوربین‌ها</a></li>
                        <li class="breadcrumb-item active">افزودن دوربین جدید</li>
                    </ol>
                </nav>
                <h1 class="h3 mb-0">افزودن دوربین جدید</h1>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @ViewBag.Error
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">اطلاعات دوربین</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="row">
                            <!-- Basic Information -->
                            <div class="col-lg-6">
                                <h6 class="text-primary mb-3">اطلاعات پایه</h6>
                                
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">نام دوربین <span class="text-danger">*</span></label>
                                    <input asp-for="Name" class="form-control" placeholder="نام دوربین را وارد کنید" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Type" class="form-label">نوع دوربین <span class="text-danger">*</span></label>
                                    <select asp-for="Type" class="form-select" id="cameraType">
                                        <option value="">نوع دوربین را انتخاب کنید</option>
                                        @foreach (var type in ViewBag.CameraTypes as Array)
                                        {
                                            <option value="@type">@type</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Type" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Location" class="form-label">موقعیت <span class="text-danger">*</span></label>
                                    <input asp-for="Location" class="form-control" placeholder="آدرس یا محل دوربین" />
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="LocationZone" class="form-label">منطقه</label>
                                    <input asp-for="LocationZone" class="form-control" placeholder="منطقه یا بخش (اختیاری)" />
                                    <span asp-validation-for="LocationZone" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Network Settings -->
                            <div class="col-lg-6">
                                <h6 class="text-primary mb-3">تنظیمات شبکه</h6>
                                
                                <div class="mb-3">
                                    <label asp-for="IpAddress" class="form-label">آدرس IP <span class="text-danger">*</span></label>
                                    <input asp-for="IpAddress" class="form-control" placeholder="192.168.1.100" />
                                    <span asp-validation-for="IpAddress" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Port" class="form-label">پورت <span class="text-danger">*</span></label>
                                    <input asp-for="Port" class="form-control" type="number" min="1" max="65535" placeholder="80" />
                                    <span asp-validation-for="Port" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Username" class="form-label">نام کاربری</label>
                                    <input asp-for="Username" class="form-control" placeholder="نام کاربری (اختیاری)" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label">رمز عبور</label>
                                    <div class="input-group">
                                        <input asp-for="Password" class="form-control" type="password" placeholder="رمز عبور (اختیاری)" id="passwordInput" />
                                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword()">
                                            <i class="fas fa-eye" id="passwordIcon"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- GPS Coordinates (Optional) -->
                        <div class="row">
                            <div class="col-12">
                                <h6 class="text-primary mb-3">مختصات جغرافیایی (اختیاری)</h6>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label asp-for="Latitude" class="form-label">عرض جغرافیایی</label>
                                    <input asp-for="Latitude" class="form-control" type="number" step="any" placeholder="35.6892" />
                                    <span asp-validation-for="Latitude" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-3">
                                    <label asp-for="Longitude" class="form-label">طول جغرافیایی</label>
                                    <input asp-for="Longitude" class="form-control" type="number" step="any" placeholder="51.3890" />
                                    <span asp-validation-for="Longitude" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-2"></i>
                                        بازگشت
                                    </a>
                                    <div>
                                        <button type="button" class="btn btn-outline-info me-2" onclick="testConnection()">
                                            <i class="fas fa-wifi me-2"></i>
                                            تست اتصال
                                        </button>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save me-2"></i>
                                            ذخیره دوربین
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const passwordIcon = document.getElementById('passwordIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                passwordIcon.className = 'fas fa-eye-slash';
            } else {
                passwordInput.type = 'password';
                passwordIcon.className = 'fas fa-eye';
            }
        }

        function testConnection() {
            const ipAddress = document.querySelector('input[name="IpAddress"]').value;
            const port = document.querySelector('input[name="Port"]').value;
            const username = document.querySelector('input[name="Username"]').value;
            const password = document.querySelector('input[name="Password"]').value;

            if (!ipAddress || !port) {
                alert('لطفاً آدرس IP و پورت را وارد کنید.');
                return;
            }

            // Show loading state
            const testBtn = event.target;
            const originalText = testBtn.innerHTML;
            testBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>در حال تست...';
            testBtn.disabled = true;

            // Simulate connection test (replace with actual AJAX call)
            setTimeout(() => {
                testBtn.innerHTML = originalText;
                testBtn.disabled = false;
                // TODO: Implement actual connection test
                alert('قابلیت تست اتصال به زودی اضافه خواهد شد');
            }, 2000);
        }

        // Auto-set default ports based on camera type
        document.getElementById('cameraType').addEventListener('change', function() {
            const portInput = document.querySelector('input[name="Port"]');
            const currentPort = portInput.value;
            
            if (!currentPort) {
                switch(this.value) {
                    case 'IP':
                        portInput.value = '80';
                        break;
                    case 'RTSP':
                        portInput.value = '554';
                        break;
                    case 'ONVIF':
                        portInput.value = '80';
                        break;
                }
            }
        });
    </script>
}
