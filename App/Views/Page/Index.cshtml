@using DTOs.Pagebuilder
@model List<PageDTO>

<div class="container py-5">
    <h2 class="mb-4 fw-light">Pages</h2>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr class="bg-light">
                        <th class="px-4 py-3">Title</th>
                        <th class="px-4 py-3">Created At</th>
                        <th class="px-4 py-3">Updated At</th>
                        <th class="px-4 py-3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="px-4 py-3">@item.Title</td>
                            <td class="px-4 py-3">@item.CreatedAt</td>
                            <td class="px-4 py-3">@item.UpdatedAt</td>
                            <td class="px-4 py-3">
                                <div class="d-flex gap-2">
                                    <form asp-action="Edit" asp-route-id="@item.Id" method="get">
                                        <button type="submit" class="btn btn-outline-primary btn-sm px-3">Update</button>
                                    </form>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                        <button type="submit" class="btn btn-outline-danger btn-sm px-3">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .table {
        --bs-table-hover-bg: rgba(0, 0, 0, 0.02);
    }
    
    .table th {
        font-weight: 500;
        text-transform: uppercase;
        font-size: 0.875rem;
        letter-spacing: 0.5px;
        color: #6c757d;
        border-bottom-width: 1px;
    }
    
    .table td {
        vertical-align: middle;
        color: #495057;
        border-color: #f8f9fa;
    }
    
    .btn-sm {
        font-weight: 500;
        border-radius: 4px;
        transition: all 0.2s;
    }
    
    .card {
        border-radius: 8px;
        border: none;
    }
</style>
