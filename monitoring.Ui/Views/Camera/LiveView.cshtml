@model Monitoring.Ui.Models.Camera.CameraViewModel
@{
    ViewData["Title"] = $"تصویر زنده - {Model.Name}";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>تصویر زنده - @Model.Name</h2>
                <div>
                    <a asp-action="Snapshot" asp-route-id="@Model.Id" class="btn btn-secondary" target="_blank">
                        <i class="fas fa-camera"></i> عکس
                    </a>
                    <a asp-action="TestStrategies" asp-route-id="@Model.Id" class="btn btn-info">
                        <i class="fas fa-cog"></i> تست استراتژی‌ها
                    </a>
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i> بازگشت
                    </a>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
            }

            <div class="row">
                <div class="col-lg-9">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-video"></i> تصویر زنده
                                <span class="badge bg-success ms-2">آنلاین</span>
                            </h5>
                        </div>
                        <div class="card-body text-center">
                            @if (!string.IsNullOrEmpty(ViewBag.StreamUrl))
                            {
                                <div class="video-container">
                                    <video controls autoplay muted class="w-100" style="max-height: 500px;">
                                        <source src="@ViewBag.StreamUrl" type="video/mp4">
                                        مرورگر شما از تگ video پشتیبانی نمی‌کند.
                                    </video>
                                </div>
                                <div class="mt-3">
                                    <small class="text-muted">URL استریم: @ViewBag.StreamUrl</small>
                                </div>
                            }
                            else
                            {
                                <div class="placeholder-video d-flex align-items-center justify-content-center" 
                                     style="height: 400px; background-color: #f8f9fa; border: 2px dashed #dee2e6;">
                                    <div class="text-center">
                                        <i class="fas fa-video-slash fa-3x text-muted mb-3"></i>
                                        <h5 class="text-muted">تصویر در دسترس نیست</h5>
                                        <p class="text-muted">امکان اتصال به دوربین وجود ندارد</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">اطلاعات دوربین</h6>
                        </div>
                        <div class="card-body">
                            <p><strong>نام:</strong> @Model.Name</p>
                            <p><strong>مکان:</strong> @Model.Location</p>
                            <p><strong>IP:</strong> @Model.IpAddress</p>
                            <p><strong>پورت:</strong> @Model.Port</p>
                            <p><strong>نوع:</strong> @Model.Type</p>
                            <p><strong>وضعیت:</strong> 
                                <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-secondary")">
                                    @Model.Status
                                </span>
                            </p>
                        </div>
                    </div>

                    @if (ViewBag.ConnectionInfo != null)
                    {
                        <div class="card mt-3">
                            <div class="card-header">
                                <h6 class="mb-0">اطلاعات اتصال</h6>
                            </div>
                            <div class="card-body">
                                <small class="text-muted">استراتژی فعال و جزئیات اتصال</small>
                            </div>
                        </div>
                    }

                    <div class="card mt-3">
                        <div class="card-header">
                            <h6 class="mb-0">عملیات</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("Snapshot", new { id = Model.Id })" 
                                   class="btn btn-outline-secondary btn-sm" target="_blank">
                                    <i class="fas fa-camera"></i> گرفتن عکس
                                </a>
                                <button class="btn btn-outline-primary btn-sm" onclick="refreshStream()">
                                    <i class="fas fa-refresh"></i> تازه‌سازی
                                </button>
                                <a asp-action="TestConnection" asp-route-id="@Model.Id" 
                                   class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-network-wired"></i> تست اتصال
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function refreshStream() {
        location.reload();
    }
</script>
