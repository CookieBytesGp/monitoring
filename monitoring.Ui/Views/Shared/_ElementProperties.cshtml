<div class="element-properties-container">
    <div class="no-selection" id="no-selection" style="display: block;">
        <div class="text-center text-muted py-5">
            <i class="fas fa-mouse-pointer fa-2x mb-3"></i>
            <h6>المنتی انتخاب نشده</h6>
            <p class="small mb-0">برای نمایش تنظیمات، یک المنت را انتخاب کنید</p>
        </div>
    </div>

    <div class="properties-content" id="properties-content" style="display: none;">
        <!-- Properties tabs -->
        <div class="properties-tabs">
            <div class="nav nav-pills nav-justified" role="tablist">
                <button class="nav-link active" data-bs-toggle="pill" data-bs-target="#content-tab" type="button" role="tab">
                    <i class="fas fa-edit me-1"></i>
                    محتوا
                </button>
                <button class="nav-link" data-bs-toggle="pill" data-bs-target="#style-tab" type="button" role="tab">
                    <i class="fas fa-palette me-1"></i>
                    استایل
                </button>
            </div>
        </div>

        <!-- Tab content -->
        <div class="tab-content mt-3">
            <!-- Content Tab -->
            <div class="tab-pane fade show active" id="content-tab" role="tabpanel">
                <div class="content-properties" id="content-properties">
                    <!-- Content properties will be loaded here based on element type -->
                </div>
            </div>

            <!-- Style Tab -->
            <div class="tab-pane fade" id="style-tab" role="tabpanel">
                <div class="style-properties">
                    <!-- Position & Size -->
                    <div class="property-group">
                        <h6 class="property-group-title">
                            <i class="fas fa-arrows-alt me-2"></i>
                            موقعیت و اندازه
                        </h6>
                        <div class="row g-2">
                            <div class="col-6">
                                <label class="form-label small">X</label>
                                <input type="number" class="form-control form-control-sm" id="element-x" min="0">
                            </div>
                            <div class="col-6">
                                <label class="form-label small">Y</label>
                                <input type="number" class="form-control form-control-sm" id="element-y" min="0">
                            </div>
                            <div class="col-6">
                                <label class="form-label small">عرض</label>
                                <input type="number" class="form-control form-control-sm" id="element-width" min="1">
                            </div>
                            <div class="col-6">
                                <label class="form-label small">ارتفاع</label>
                                <input type="number" class="form-control form-control-sm" id="element-height" min="1">
                            </div>
                        </div>
                    </div>

                    <!-- Border & Background -->
                    <div class="property-group">
                        <h6 class="property-group-title">
                            <i class="fas fa-square me-2"></i>
                            حاشیه و پس‌زمینه
                        </h6>
                        <div class="mb-3">
                            <label class="form-label small">رنگ پس‌زمینه</label>
                            <div class="color-input-group">
                                <input type="color" class="form-control form-control-color" id="element-bg-color" value="#ffffff">
                                <input type="text" class="form-control form-control-sm" id="element-bg-color-text" value="#ffffff">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label small">شفافیت (%)</label>
                            <input type="range" class="form-range" id="element-opacity" min="0" max="100" value="100">
                            <div class="text-center small">
                                <span id="opacity-value">100%</span>
                            </div>
                        </div>
                        <div class="row g-2">
                            <div class="col-8">
                                <label class="form-label small">رنگ حاشیه</label>
                                <input type="color" class="form-control form-control-color" id="element-border-color" value="#dee2e6">
                            </div>
                            <div class="col-4">
                                <label class="form-label small">ضخامت</label>
                                <input type="number" class="form-control form-control-sm" id="element-border-width" value="0" min="0" max="10">
                            </div>
                        </div>
                        <div class="mt-2">
                            <label class="form-label small">گردی گوشه‌ها</label>
                            <input type="number" class="form-control form-control-sm" id="element-border-radius" value="0" min="0" max="50">
                        </div>
                    </div>

                    <!-- Text Properties (for text elements) -->
                    <div class="property-group" id="text-properties" style="display: none;">
                        <h6 class="property-group-title">
                            <i class="fas fa-font me-2"></i>
                            تنظیمات متن
                        </h6>
                        <div class="mb-3">
                            <label class="form-label small">فونت</label>
                            <select class="form-select form-select-sm" id="element-font-family">
                                <option value="'Segoe UI', sans-serif">Segoe UI</option>
                                <option value="Arial, sans-serif">Arial</option>
                                <option value="'Times New Roman', serif">Times New Roman</option>
                                <option value="'Courier New', monospace">Courier New</option>
                                <option value="Tahoma, sans-serif">Tahoma</option>
                            </select>
                        </div>
                        <div class="row g-2">
                            <div class="col-6">
                                <label class="form-label small">اندازه</label>
                                <input type="number" class="form-control form-control-sm" id="element-font-size" value="16" min="8" max="72">
                            </div>
                            <div class="col-6">
                                <label class="form-label small">وزن</label>
                                <select class="form-select form-select-sm" id="element-font-weight">
                                    <option value="normal">عادی</option>
                                    <option value="bold">ضخیم</option>
                                    <option value="lighter">نازک</option>
                                </select>
                            </div>
                        </div>
                        <div class="mt-3">
                            <label class="form-label small">رنگ متن</label>
                            <div class="color-input-group">
                                <input type="color" class="form-control form-control-color" id="element-text-color" value="#000000">
                                <input type="text" class="form-control form-control-sm" id="element-text-color-text" value="#000000">
                            </div>
                        </div>
                        <div class="mt-3">
                            <label class="form-label small">تراز</label>
                            <div class="btn-group w-100" role="group">
                                <input type="radio" class="btn-check" name="text-align" id="align-left" value="left">
                                <label class="btn btn-outline-primary btn-sm" for="align-left">
                                    <i class="fas fa-align-left"></i>
                                </label>
                                <input type="radio" class="btn-check" name="text-align" id="align-center" value="center" checked>
                                <label class="btn btn-outline-primary btn-sm" for="align-center">
                                    <i class="fas fa-align-center"></i>
                                </label>
                                <input type="radio" class="btn-check" name="text-align" id="align-right" value="right">
                                <label class="btn btn-outline-primary btn-sm" for="align-right">
                                    <i class="fas fa-align-right"></i>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Layer Controls -->
                    <div class="property-group">
                        <h6 class="property-group-title">
                            <i class="fas fa-layer-group me-2"></i>
                            لایه‌بندی
                        </h6>
                        <div class="btn-group w-100" role="group">
                            <button type="button" class="btn btn-outline-secondary btn-sm" id="bring-forward">
                                <i class="fas fa-arrow-up"></i>
                                جلو
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm" id="send-backward">
                                <i class="fas fa-arrow-down"></i>
                                عقب
                            </button>
                            <button type="button" class="btn btn-outline-danger btn-sm" id="delete-element">
                                <i class="fas fa-trash"></i>
                                حذف
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

