@model Monitoring.Ui.Models.Page.EditPageViewModel
@{
    ViewData["Title"] = "ویرایش صفحه - " + Model.Title;
    Layout = "_PageEditorLayout";
}

<!-- Main Canvas Area -->
<div class="editor-workspace" data-page-id="@Model.Id">
    <!-- Loading Overlay -->
    <div id="loading-overlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 9999; justify-content: center; align-items: center;">
        <div style="background: white; padding: 20px; border-radius: 8px; text-align: center;">
            <i class="fas fa-spinner fa-spin fa-2x mb-3"></i>
            <div class="loading-text">در حال آپلود...</div>
        </div>
    </div>

    <!-- Canvas Viewport - Fixed container -->
    <div class="canvas-viewport" id="canvas-viewport">
        <!-- Canvas Container - Scalable content -->
        <div class="canvas-container" id="canvas-container">
            <!-- Canvas content will be created by JavaScript -->
            <div class="page-content" id="page-content">
                <!-- Page elements go here -->
            </div>
        </div>
    </div>
    
    <!-- Editor Controls -->
    <div class="editor-controls">
        <div class="toolbar-group">
            <button class="toolbar-btn save-btn" id="save-btn" title="ذخیره تغییرات در دیتابیس">
                <i class="fas fa-save"></i>
                <span>ذخیره</span>
            </button>
            <button class="toolbar-btn cancel-btn" id="cancel-btn" title="لغو تغییرات و بازگشت به حالت اولیه">
                <i class="fas fa-times"></i>
                <span>انصراف</span>
            </button>
        </div>
    </div>
    
    <!-- Mouse Usage Guide -->
    <div class="mouse-guide">
        <h6><i class="fas fa-mouse"></i> راهنمای استفاده</h6>
        <div class="guide-item">
            <div class="mouse-icon left-click">L</div>
            <span>کلیک چپ: جابجایی المنت‌ها</span>
        </div>
        <div class="guide-item">
            <div class="mouse-icon right-click">R</div>
            <span>کلیک راست: انتخاب و تنظیمات</span>
        </div>
    </div>
    
    <!-- Zoom Controls - Enhanced -->
    <div class="zoom-controls" id="zoom-controls">
        <button class="zoom-btn" id="zoom-out" title="کوچک کردن">
            <i class="fas fa-minus"></i>
        </button>
        <div class="zoom-level" id="zoom-level">100%</div>
        <button class="zoom-btn" id="zoom-in" title="بزرگ کردن">
            <i class="fas fa-plus"></i>
        </button>
        <button class="zoom-fit-btn" id="zoom-fit" title="تنظیم به اندازه صفحه">
            <i class="fas fa-compress-arrows-alt"></i>
        </button>
        <button class="zoom-fit-btn" id="actual-size" title="اندازه واقعی">
            <i class="fas fa-expand-arrows-alt"></i>
        </button>
    </div>
    
    <!-- Coordinate Display -->
    <div class="coordinate-display" id="coordinate-display">
        <span class="coord-label">X:</span><span id="coord-x">0</span>
        <span class="coord-label">Y:</span><span id="coord-y">0</span>
    </div>
    
    <!-- Context Menu -->
    <div class="context-menu" id="context-menu">
        <button class="context-menu-item" id="ctx-copy">
            <i class="fas fa-copy"></i>
            کپی
        </button>
        <button class="context-menu-item" id="ctx-paste">
            <i class="fas fa-paste"></i>
            چسباندن
        </button>
        <div class="context-menu-divider"></div>
        <button class="context-menu-item" id="ctx-bring-forward">
            <i class="fas fa-arrow-up"></i>
            آوردن به جلو
        </button>
        <button class="context-menu-item" id="ctx-send-backward">
            <i class="fas fa-arrow-down"></i>
            فرستادن به عقب
        </button>
        <div class="context-menu-divider"></div>
        <button class="context-menu-item" id="ctx-delete">
            <i class="fas fa-trash"></i>
            حذف
        </button>
    </div>
    
    <!-- Selection Box -->
    <div class="selection-box" id="selection-box"></div>
    
    <!-- Alignment Guides -->
    <div class="alignment-guide horizontal" id="h-guide"></div>
    <div class="alignment-guide vertical" id="v-guide"></div>
    
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loading-overlay" style="display: none;">
        <div class="loading-spinner"></div>
    </div>
</div>

<!-- Page Settings Modal -->
<div class="modal fade" id="pageSettingsModal" tabindex="-1" aria-labelledby="pageSettingsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="pageSettingsModalLabel">
                    <i class="fas fa-paint-brush me-2"></i>
                    تنظیمات صفحه
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="mb-3">
                            <i class="fas fa-image me-2"></i>
                            تصویر پس‌زمینه
                        </h6>
                        
                        <div class="mb-3">
                            <input type="file" class="form-control" id="background-image" accept="image/*">
                            <div class="form-text">فرمت‌های مجاز: JPG, PNG, GIF</div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label small">حالت نمایش</label>
                            <select class="form-select form-select-sm" id="background-mode">
                                <option value="cover">پوشش کامل</option>
                                <option value="contain">تناسب حفظ شده</option>
                                <option value="stretch">کشیده شده</option>
                                <option value="center">وسط صفحه</option>
                                <option value="tile">کاشی‌کاری</option>
                            </select>
                        </div>
                        
                        <div class="background-preview"></div>
                    </div>
                    
                    <div class="col-md-6">
                        <h6 class="mb-3">
                            <i class="fas fa-volume-up me-2"></i>
                            صدای پس‌زمینه
                        </h6>
                        
                        <div class="mb-3">
                            <input type="file" class="form-control" id="background-audio" accept="audio/*">
                            <div class="form-text">فرمت‌های مجاز: MP3, WAV, OGG</div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label small">حجم صدا (%)</label>
                            <input type="range" class="form-range" id="audio-volume" min="0" max="100" value="50">
                            <div class="text-center small">
                                <span id="volume-value">50%</span>
                            </div>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="audio-loop" checked>
                            <label class="form-check-label" for="audio-loop">
                                تکرار خودکار
                            </label>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="audio-autoplay">
                            <label class="form-check-label" for="audio-autoplay">
                                پخش خودکار
                            </label>
                        </div>
                        
                        <div class="audio-controls" style="display: none;">
                            <audio controls style="width: 100%;" id="audio-preview">
                                صدای پیش‌نمایش
                            </audio>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                <button type="button" class="btn btn-primary" id="save-page-settings">
                    <i class="fas fa-save me-2"></i>
                    ذخیره تنظیمات
                </button>
            </div>
        </div>
    </div>
</div>
